!!!
%html
  %head
    %title #{title}
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => "noindex", :name => "robots"}/
    %meta{:content => "nofollow", :name => "robots"}/
    %meta{:name => "apple-mobile-web-app-capable", :content => "yes"}/
    = auto_discovery_link_tag :rss, lessons_path(:format=>:rss), :title => "#{Settings.name} - Lessons"
    %link{:href => image_path('run.ico'), :rel => "icon", :type => "image/x-icon"}/
    %link{:href => image_path('run.ico'), :rel => "shortcut icon", :type => "image/x-icon"}/
    = stylesheet_link_tag "application", :media => "all"
    = csrf_meta_tag
  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          %button.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "./index.html"}
            = Settings.name
          .nav-collapse.collapse
            %ul.nav
              %li.active
                = link_to "Home", :controller =>'home'
              %li
                = link_to 'Contests', contests_path
              %li
                = link_to 'Problems', problems_path
              %li
                = link_to 'Lessons', lessons_path
              %li.dropdown
                %a.dropdown-toggle{'data-toggle' => 'dropdown', :href => '#'}
                  Discussions
                  %b.caret
                %ul.dropdown-menu
                  %li= link_to 'General', topics_path
                  %li= link_to 'Тэмцээний', '/topic/contest'
                  %li= link_to 'Бодлогын', '/topic/problem'
                  %li= link_to 'Хичээлийн', '/topic/lesson'
                  %li= link_to 'Сүүлд нэмэгдсэн', comments_path
              %li
                = link_to 'Coders', users_path
              %form.navbar-search.pull-left#search{:action => "/search", :method => "get"}
                %input.search-query.span2{:type => "text", :placeholder => "Search", :name => "q"}
              - if logged_in?
                %li.dropdown
                  %a.dropdown-toggle{'data-toggle' => 'dropdown', :href => '#'}
                    \#{image_tag current_user.gravatar_url(:size => 20)} #{current_user.login}
                    %b.caret
                  %ul.dropdown-menu
                    %li
                      = link_to account_users_path do
                        %i.icon-user
                        Account
                    %li
                      = link_to edit_user_path(current_user) do
                        %i.icon-wrench
                        Preferences
                    %li
                      = link_to dashboard_path do
                        %i.icon-sitemap
                        Dashboard
                    %li
                      = link_to logout_path do
                        %i.icon-signout
                        Logout
              - else
                %li
                  = link_to 'Login', login_path
                %li
                  = link_to 'Signup', signup_path
    .container
      = flashy
      = yield

    #footer-push.clearfix
    %footer.footer
      .container
        %p
          \&copy; #{Settings.copyright % Date.today.year}
        %ul.footer-links
          %li= link_to 'About', about_path
          %li.muted &middot;
          %li= link_to 'Guide', guide_path
          %li.muted &middot;
          %li= link_to 'Issues', 'https://github.com/ochko/prudge/issues'

    = javascript_include_tag "application"

    