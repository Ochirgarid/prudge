= paginate @comments

%table.table
  %thead
    %tr
      %th= tt :date
      %th= tt :user
      %th= tt :post
      %th
  %tbody
    - @comments.each do |c|
      %tr{:id => "comment_#{c.id}"}
        %td.small= l c.created_at
        %td= link_to c.user.login, c.user
        %td.small= truncate h(c.text), :length => 70
        %td
          = link_to c.topic do
            %i.icon-share-alt
        %td
          = link_to c, :remote => true, :confirm => t('.delete?'), :method => :delete do
            %i.icon-trash

= paginate @comments
