- @contests.each do |contest|
  %h2
    = link_to contest.name, contest
  .subhead
    %i.icon-time
    = l contest.start
    %i.icon-double-angle-right
    = l contest.end
    .muted
      = show_status contest

  %section
    ~ markdown contest.description
    = link_to contest, :class => 'btn btn-mini' do
      = t('.visit_contest')
      %i.icon-share-alt

= paginate @contests
