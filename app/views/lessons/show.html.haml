%section
  .row
    .span12
      .media
        = link_to @lesson.author, :class => "pull-left" do
          = image_tag @lesson.author.gravatar_url(:size => 120), :class => 'img-polaroid'
        .media-body
          %h2.media-heading
            = @lesson.title
          .muted
            Posted on
            %strong=l @lesson.updated_at, :format => :date
            %br
            by #{link_to @lesson.author.login, @lesson.author}
      .page-content
        = markdown @lesson.text
%section
  = render :partial => 'comments/commentable', :object => @lesson
    
