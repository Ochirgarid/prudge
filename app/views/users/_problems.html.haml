%table.table.table-hover.table-striped.table-bordered
  %thead
    %tr
      %th{:width => "1%"}
      %th
        - if @user == current_user
          = link_to new_problem_path, :class => 'btn btn-small' do
            %i.icon-plus-sign
            = t '.new'
      %th.center{:title => t('.points')}
        %i.icon-check
      %th.center{:title => t('.time-limit')}
        %i.icon-time
      %th.center{:title => t('.memory-limit')}
        %i.icon-hdd
      %th= t 'title.date'
  %tbody
    - @user.problems.each do |p|
      %tr
        %td= p.id
        %td= link_to p.name, p
        %td.center= '%.3f' % p.point
        %td.center
          = p.time
          = t('unit.second')
        %td.center
          = p.memory
          = t('unit.kb')
        %td= l p.created_at
