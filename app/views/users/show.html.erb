<table>
  <tr>
    <td>
        <h1><%= @user.login %></h1>
        <table>
          <tr>
            <td>
	      <%= image_tag(@user.gravatar_url, :id => "portrait") %>
            </td>
            <td>
                <%= medal_list(@standings) %><br />
                Оноо: <%= "%.2f" % @user.points if !@user.points.nil? %><br />
                Хугацаа: <%= sec2milisec @user.average if !@user.average.nil? %><br />
                Түвшин: <%= rank_name(@user.points, @total).capitalize %><br />
            </td>
            <td>
              <div>
                Сургууль эсвэл байгууллага:
                <%= white_list @user.school %>
              </div>
            <td>
          </tr>
        </table>
    </td>
  <tr>
  <tr>
    <td>
      <table width="100%">
        <% if @contests.size > 0 %>
        <tr>
          <td>

              <h3>Оролцсон тэмцээн</h3>
              <table width="100%">
                <tr>
                  <th>Байр</th>
                  <th>Нэр</th>
                  <th>Огноо</th>
                </tr>
                <% @standings.each do |c,s| %>
                <tr>
                  <td><%= standing(s) %></td>
                  <td><%= link_to c.name, c %></td>
                  <td><%= c.start %></td>
                </tr>
                <% end %>
              </table>

          </td>
        </tr>
        <% end %>
        <% if @lessons.size > 0 %>
        <tr>
          <td>
              <h3>Бичсэн хичээл</h3>
              <table width="100%">
                <tr>
                  <th>Гарчиг</th>
                  <th>Огноо</th>
                  <th>Үнэлгээ</th>
                </tr>
                <% for l in @lessons %>
                <tr>
                  <td><%= link_to l.title, :controller=> 'lessons',
                    :action=>'show', :id=>l.id %></td>
                  <td><%= l.updated_at %></td>
                </tr>
                <% end %>
              </table>
          </td>
        </tr>
        <% end %>
        <% if @problems.size > 0 %>
        <tr>
          <td>

              <h3>Дэвшүүлсэн бодлого</h3>
              <table width="100%">
                <tr>
                  <th>Нэр</th>
                  <th>Огноо</th>
                  <th>Оноо</th>
                  <th>Хугацаа</th>
                  <th>Санах ой</th>
                </tr>
                <% for p in @problems%>
                <tr>
                  <td><%= link_to p.name, :controller=> 'problems',
                    :action=>'show', :id=>p.id %></td>
                  <td><%= p.created_at %></td>
                  <td><%= p.level %></td>
                  <td><%= p.time %></td>
                  <td><%= p.memory %></td>
                </tr>
                <% end %>
              </table>
          </td>
        </tr>
        <% end %>
        <% if @solutions.size > 0 %>
        <tr>
          <td>
              <h3>Бодолтууд</h3>
              <table width="100%">
                <tr>
                  <th width="1%"></th>
                  <th>Бодлого</th>
                  <th>Оноо</th>
                  <th>Хэл</th>
                  <th>Бодсон</th>
                  <th>Шинэчилсэн</th>
                  <th>Хувь</th>
                  <th>Хугацаа</th>
                </tr>
                <% for s in @solutions%>
                <tr>
                  <td><%= link_to show_correctness(s.correct),
                          :controller=>'solutions', :action=>'show',
                    :id => s.id %></td>
                  <td><%= link_to s.problem.name, :controller=>'problems',
                    :action=>'show', :id=>s.problem_id %></td>
                  <td><%= s.problem.level %></td>
                  <td><%= s.language.name %></td>
                  <td class='small'><%= s.created_at.to_s(:date_time24) %></td>
                  <td class='small'><%= s.uploaded_at.to_s(:date_time24) %></td>
                  <td><%= "%0.0f" % (s.percent*100) %></td>
                  <td><%= sec2milisec s.time %></td>
                </tr>
                <% end %>
              </table>
          </td>
        </tr>
        <% end %>
      </table>
    </td>
  </tr>
</table>
