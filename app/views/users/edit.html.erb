<h1 class="center">Тохиргоог шинэчлэх</h1>

<div class="user-form">
  <div class="form-top"> </div>
  <div class="form-middle">
    <% form_for @user, :url => user_path do |f| %>
    <%= f.error_messages %>
    <%= f.label :login, "Нэвтрэх нэр" %>
    <%= f.text_field :login %>
    
    <%= f.label :email, "И-мэйл" %>
    <%= f.text_field :email %>
    <%= f.check_box :notify_new_contests, :title => 'Шинэ тэмцээн зохиогдоход надад имэйлээр мэдэгд' %>

    <%= f.label :school, "Сургууль" %>
    <%= f.text_field :school %>
    
    <% if @user.openid_identifier.blank? %>
    <%= f.label :password, "Нууц үг солих" %>
    <%= f.password_field :password %>
    
    <%= f.label :password_confirmation, "Нууц үгийг давт" %>
    <%= f.password_field :password_confirmation %>
    
    <% end %>
    <%= f.label :openid_identifier, "OpenID URL"%>  
    <%= f.text_field :openid_identifier %>

    <div id="social-media-input">
      <h3>Хэрэв хүсвэл</h3>
    <%= f.label :social_twitter, "Twitter"%>  
    <%= f.text_field :social_twitter %>
    
    <%= f.label :social_facebook, "Facebook"%>  
    <%= f.text_field :social_facebook %>

    <%= f.label :social_blogger, "Blogger"%>  
    <%= f.text_field :social_blogger %>
    
    <%= f.label :social_google, "Google"%>  
    <%= f.text_field :social_google %>

    <%= f.label :social_hi5, "Hi5"%>  
    <%= f.text_field :social_hi5 %>

    <%= f.label :social_yahoo, "Yahoo"%>  
    <%= f.text_field :social_yahoo %>
    </div>
    <div class="form-submitter">
      <%= f.submit "Хадгал", :class => 'small awesome' %>
    </div>
    <% end %>
  </div>
  <div class="form-bottom"></div>
</div>
