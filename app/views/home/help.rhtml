<h1>Тусламж</h1>

<% for n in @helps %>
<h2><%=h n.title %></h2>
<span class="news-meta"><%=l n.created_at %></span>
<%=markdown n.content %>
<% end %>
<%= will_paginate @helps, :class=>'apple_pagination', :previous_label => '&laquo; Өмнөх', :next_label   => 'Дараах &raquo;' %>

<% if admin? %>
<%= link_to 'Шинэ тусламж', :controller=>'pages', :action => 'new' %>
<% end %>
